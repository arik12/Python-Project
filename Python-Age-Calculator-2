from datetime import date

def calculate_age(birth_year, birth_month):
    today = date.today()
    current_year = today.year
    current_month = today.month

    age_years = current_year - birth_year
    age_months = current_month - birth_month

    return age_years, age_months

birth_year = int(input("Enter your birth year: "))
birth_month = 7  # Give Your birth month = July

years, months = calculate_age(birth_year, birth_month)
print(f"You are {years} years and {months} months old.")
